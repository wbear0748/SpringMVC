<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
 
<configuration>
       
    <typeAliases>
        <typeAlias type="spring.mvc.user.User" alias="User" />
        <typeAlias type="spring.mvc.board.Board" alias="Board" />
        <typeAlias type="spring.mvc.board.Post" alias="Post" />
        <typeAlias type="spring.mvc.board.AttachFile" alias="AttachFile" />
        <typeAlias type="spring.mvc.board.Comment" alias="Comment" />
    </typeAliases>
 
    <mappers>
        <mapper resource="spring/mvc/mybatis/UserMapper.xml" />
        <mapper resource="spring/mvc/mybatis/BoardMapper.xml" />
    </mappers>
</configuration>